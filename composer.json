{
    "name": "picobaz/jalaliflow",
    "description": "A Laravel package for advanced Jalali (Persian) calendar management",
    "type": "library",
    "license": "MIT",
    "keywords": ["laravel", "jalali", "persian", "calendar", "date"],
    "autoload": {
        "psr-4": {
            "PicoBaz\\JalaliFlow\\": "src/"
        }
    },
    "authors": [
        {
            "name": "PicoBaz",
            "email": "your.real.email@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0|^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0|^8.0|^9.0",
        "phpunit/phpunit": "^9.5|^10.0"
    },
    "autoload-dev": {
        "psr-4": {
            "PicoBaz\\JalaliFlow\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "PicoBaz\\JalaliFlow\\JalaliFlowServiceProvider"
            ],
            "aliases": {
                "JalaliFlow": "PicoBaz\\JalaliFlow\\Facades\\JalaliFlow"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}